<div class="container">
  <div class="row">
    <h1>Follows User</h1>
  </div>
  <% if @users.exists? %>
  <table class="table">
    <thead>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
          <td><%= user.name %></td>
          <td>フォロー数:<%= user.followings.count %></td>
          <td>フォロワー数:<%= user.followers.count %></td>
          <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <p>ユーザーがいません</p>
  <% end %>
</div>
