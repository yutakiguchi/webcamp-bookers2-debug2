<table class="table mt-5 table-borderless">
  <tr>
    <th><h4>Comments</h4></th>
  </tr>
  <% book.book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= link_to user_path(book_comment.user) do %>
          <%= attachment_image_tag(book_comment.user, :profile_image,:fill,100,100,fallback: "no-image-icon.jpg")%>
        <% end %>
        <%= book_comment.comment %>
        <% if book_comment.user.id == current_user.id %>
          <%= link_to "Destroy",book_book_comment_path(book_comment.book,book_comment),method: :delete,remote: true ,class: "btn btn-sm btn-danger" %>
        <% end %><br/>
        <p><%= book_comment.user.name %></p>
      </td>
    </tr>
   <% end %>
</table>