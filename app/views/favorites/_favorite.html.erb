<% if book.favorited_by?(current_user) %>
  <p>
    <%= link_to book_favorites_path(book.id),method: :delete,remote: true do %>
     <%= book.favorites.count %> <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to book_favorites_path(book.id),method: :post,remote: true do %>
      <%= book.favorites.count %><i class="fa fa-heart" aria-hudden="true" style="color: blue;"></i>
    <% end %>
  </p>
<% end %>